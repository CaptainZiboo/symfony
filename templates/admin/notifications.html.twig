{% extends 'base.html.twig' %}

{% block title %}Historique des notifications{% endblock %}

{% block body %}
    <h1>Historique des notifications</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Utilisateur</th>
                <th>Notification</th>
            </tr>
        </thead>
        <tbody>
        {% for notif in notifications %}
            <tr>
                <td>{{ notif.createdAt|date('d/m/Y H:i') }}</td>
                <td>{{ notif.user.firstName }} {{ notif.user.lastName }}</td>
                <td>{{ notif.label }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}